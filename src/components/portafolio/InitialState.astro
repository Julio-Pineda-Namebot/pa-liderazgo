---
import students from "@data/students.json";
let activeIndex = 0;
---

<div
    class="absolute inset-0 flex position-relative flex-col w-full h-full z-40"
    id="initial-state"
>
    <div class="slides-container">
        <div class="slides-inner">
            {students.map((student, idx) => (
            <div class={`slide${idx === activeIndex ? ' active' : ''}${idx === activeIndex + 1 ? ' next' : ''}`}>
                <div class="card">
                <h2>{student.nombres} {student.apellidos}</h2>
                <p><strong>Ciclo:</strong> {student.ciclo}</p>
                <p><strong>CÃ³digo UTP:</strong> {student.codigoUTP}</p>
                <p><strong>Carrera:</strong> {student.carrera}</p>
                </div>
            </div>
            ))}
        </div>
    </div>
</div>
