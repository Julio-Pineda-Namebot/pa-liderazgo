---
const currentPath = Astro.url.pathname;
---

<header
  id="main-header"
  class="fixed top-0 left-0 right-0 z-90 transition-all duration-500 ease-out"
>
  <div
    id="header-bg"
    class="absolute inset-0 bg-white/40 backdrop-blur-sm border-b -my-2 border-white/10 opacity-0 transition-all duration-500"
  >
  </div>

  <div
    class="relative flex justify-between items-center px-6 py-8 transition-all duration-500"
    id="header-content"
  >
    <div class="flex-1">
      {
        currentPath !== "/" ? (
          <a
            href="/"
            class="mb-1 px-6 py-3 bg-white/10 backdrop-blur-sm text-white/90 border border-transparent hover:text-white hover:bg-transparent hover:border-white rounded-full transition-all duration-300 hover:scale-105 text-sm"
            id="menu-button"
          >
            Volver
          </a>
        ) : (
          <button
            class="mb-1 px-6 py-3 bg-white/10 backdrop-blur-sm text-white/90 border border-transparent hover:text-white hover:bg-transparent hover:border-white rounded-full transition-all duration-300 hover:scale-105 text-sm"
            id="view-team-button"
          >
            Ver Integrantes
          </button>
        )
      }
    </div>

    <div
      class="text-white font-bold text-xl transition-all duration-500 text-center"
      id="brand-name"
    >
      Liderazgo Y Gestión de Equipos
    </div>

    <div class="flex-1 flex justify-end items-center gap-4">
      <div
        class="text-white/60 text-sm transition-all duration-300"
        id="current-time"
      >
      </div>
      <div
        class="w-2 h-2 bg-green-400 rounded-full animate-pulse"
        title="En línea"
      >
      </div>
    </div>
  </div>
</header>
