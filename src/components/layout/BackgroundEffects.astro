// BackgroundEffects.astro
---

<div class="background-effects">
  <div class="gradient-overlay"></div>
  <div class="gradient-blue"></div>
  <div class="gradient-purple"></div>

  <div class="particles-container">
    {
      Array.from({ length: 40 }).map((_, i) => (
        <div class={`particle particle-${i + 1}`} />
      ))
    }
  </div>
</div>

<style>
  .background-effects {
    pointer-events: none;
    position: fixed;
    inset: 0;
  }

  .gradient-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgb(15 23 42) 0%,
      rgb(15 23 42 / 0.9) 50%,
      rgb(15 23 42) 100%
    );
  }

  .gradient-blue {
    position: absolute;
    right: 0;
    top: 0;
    height: 500px;
    width: 500px;
    background: rgb(59 130 246 / 0.1);
    filter: blur(100px);
  }

  .gradient-purple {
    position: absolute;
    bottom: 0;
    left: 0;
    height: 500px;
    width: 500px;
    background: rgb(147 51 234 / 0.1);
    filter: blur(100px);
  }

  .particles-container {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 1;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    animation: float 10s linear infinite;
  }

  @keyframes float {
    0% {
      transform: translateY(0) scale(1);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100vh) scale(0.5);
      opacity: 0;
    }
  }

  /* Posiciones aleatorias (puedes ajustar o generar dinámicamente si quieres más variedad) */
